<!DOCTYPE html>
<html>
<head>
  <title>Cookbook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p>
  <% if current_user %>
  hello, <%= current_user.email %></p>
  <br>
  <%= link_to 'logout', session_path(session), method: :delete, data:{confirm: 'Are you sure?'}%>
  <% else %>
  <%= link_to 'please login to our site', login_path %>
  <% end %>
  </p>
  <% flash.each do |name, message| %>
    <div class="flash-message flash-message-<%= name %>">
      <%= message %>
    </div>
    <% end %>
  <nav>
    <ul>
      <% if can? :read, @book %>
      <li><%= link_to('Books', books_path) %></li>
      <% end %>
      <li><%= link_to('Recipes', recipes_path) %></li>
      <li><%= link_to('Ingredients', ingredients_path) %></li>
      <li class='clear'>&nbsp;</li>
    </ul>
  </nav>
  <section><%= yield %></section>
</body>
</html>
